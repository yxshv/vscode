<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.to("[data-card-img]", {
    scrollTrigger: {
      trigger: "[data-card-img]",
      start: "center center",
      endTrigger: "[data-card-text]>div:last-child",
      end: "center center",
